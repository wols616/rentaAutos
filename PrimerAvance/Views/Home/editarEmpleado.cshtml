@model dynamic

<style>
    body {
        background-color: #f7f7f7;
        font-family: 'Arial', sans-serif;
    }

    h1 {
        color: #5d3f6b;
        text-align: center;
        margin-bottom: 30px;
    }

    .form-container {
        max-width: 500px;
        margin: 30px auto;
        background-color: #ffffff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-control {
        border-radius: 4px;
        margin-bottom: 15px;
    }

    .btn {
        width: 100%;
        border-radius: 4px;
        font-size: 16px;
    }

    label {
        font-weight: bold;
        color: #333333;
    }

    .alert {
        margin-top: 20px;
    }
</style>

<div class="form-container">
    <h1>Editar Auto</h1>

    <!-- Mensajes de éxito o error -->
    @if (ViewBag.Exito != null)
    {
        if (ViewBag.Exito == 1)
        {
            <div class="alert alert-success">Los datos del alumno fueron actualizados con éxito.</div>
        }
        else if (ViewBag.Exito == 0)
        {
            <div class="alert alert-danger">Hubo un error al actualizar los datos del alumno.</div>
        }
    }

    <!-- Formulario de edición de Auto -->
    <form action="/Home/EditandoEmpleado" method="post" class="p-4 bg-white rounded shadow-sm">
        <input type="hidden" name="idempleado" value="@ViewBag.empleados.idempleado" />

        <div class="form-group mb-3">
            <label for="Nombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" name="Nombre" value="@ViewBag.empleados.Nombre" required />
        </div>

        <div class="form-group mb-3">
            <label for="Telefono" class="form-label">Telefono</label>
            <input type="text" class="form-control" name="Telefono" value="@ViewBag.empleados.Telefono" required />
        </div>

        <div class="form-group mb-3">
            <label for="Cargo" class="form-label">Cargo</label>
            <input type="text" class="form-control" name="Cargo" value="@ViewBag.empleados.Cargo" required />
        </div>

        <div class="form-group mb-3">
            <label for="Placa" class="form-label">Email</label>
            <input type="text" class="form-control" name="Email" value="@ViewBag.empleados.Email" required />
        </div>


        <button type="submit" class="btn btn-success w-100">Actualizar</button>
    </form>

</div>
